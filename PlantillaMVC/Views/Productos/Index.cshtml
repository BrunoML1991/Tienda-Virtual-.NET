@model IEnumerable<PlantillaMVC.Models.Producto>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/myStyles.css" rel="stylesheet" type="text/css" />
<h2>Productos a la venta:</h2>
@if (User.Identity.Name == "admin@admin.com")
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoID)
        </th>
        @if (User.Identity.Name == "admin@admin.com")
        {
            <th></th>
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Cantidad != 0|| User.Identity.Name == "admin@admin.com")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descrip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    <img src="~/Content/Images/@item.FotoID" style="height:60px;width:60px;" />
                </td>
                @if (User.Identity.Name == "admin@admin.com")
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
                <td>
                    @Html.ActionLink("AddCarrito", "AddCarrito", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
